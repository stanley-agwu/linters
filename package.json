{
  "name": "utility-config",
  "version": "1.0.0",
  "description": "React Development code standards",
  "main": "index.js",
  "scripts": {
    "commit": "cz",
    "prepare": "husky install",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "utility-config"
  },
  "keywords": [
    "lint",
    "linting",
    "eslint",
    "sort",
    "order",
    "import",
    "style-lint",
    "test",
    "testing",
    "styles",
    "prettier",
    "format"
  ],
  "author": "Stanley Agwu",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.3",
    "standard-version": "^9.5.0"
  },
  "config": {
    "commitizen": {
      "scopeList": [
        "eslint",
        "stylelint",
        "test"
      ],
      "disableBreakingChanges": true,
      "types": {
        "feat": {
          "description": "A new feature or change in functionality",
          "title": "Features"
        },
        "fix": {
          "description": "A bug fix",
          "title": "BugFixes"
        },
        "refactor": {
          "description": "A code change that neither fixes a bug nor adds a new feature",
          "title": "Refactors"
        },
        "chore": {
          "description": "Changes to the build process or auxiliary tools or libraries such as documentation",
          "title": "Chores"
        },
        "test": {
          "description": "Adding missing tests",
          "title": "Tests"
        },
        "revert": {
          "description": "A code change to revert a previous commit",
          "title": "Reverts"
        }
      },
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true"
    }
  }
}
